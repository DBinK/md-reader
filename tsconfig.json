{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "DOM"],
    "types": ["chrome", "svelte"],
    "paths": {
      "@/*": ["src/*"],
      "@md-reader/*": ["node_modules/@md-reader/*"]
    }
  },
  "include": ["src/**/*", "scripts"]
}

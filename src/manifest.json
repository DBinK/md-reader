{
  "name": "MD Reader",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "A markdown file reader",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": ["css/*", "images/*"],
  "content_scripts": [
    {
      "js": ["js/inject.js"],
      "matches": [
        "file://**/*.md",
        "file://**/*.mkd",
        "file://**/*.markdown",
        "http://**/*.md",
        "http://**/*.mkd",
        "http://**/*.markdown",
        "https://**/*.md",
        "https://**/*.mkd",
        "https://**/*.markdown"
      ]
    }
  ]
}
